<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    >

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView8"
        android:layout_below="@+id/homeTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="129dp"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEW WORKOUT SESSION"
        android:id="@+id/startSessionButton"
        android:checked="false"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:onClick="/Workout"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREATE NEW WORKOUT "
        android:id="@+id/addNewWorkoutButton"
        android:checked="false"
        android:layout_below="@+id/startSessionButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track Progress"
        android:id="@+id/currentProgressButton"
        android:layout_below="@+id/addNewWorkoutButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="WorkoutTracker"
        android:id="@+id/homeTitle" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIST OF WORKOUTS"
        android:id="@+id/allWorkoutsButton"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/currentProgressButton" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/allWorkoutsButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
